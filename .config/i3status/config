        # %total - –≤—Å–µ–≥–æ
        format = "ÔÇ†  %avail"
    
        # –±—É–¥–µ—Ç –æ–∫—Ä–∞—à–µ–Ω –≤ "color_bad" (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –∫—Ä–∞—Å–Ω—ã–π)
        # –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ –Ω–∏–∂–Ω–µ–≥–æ –ø–æ—Ä–æ–≥–∞ –º–µ–Ω–µ–µ 10GB –¥–æ—Å—Ç—É–ø–Ω–æ–≥–æ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞
