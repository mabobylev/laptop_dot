    format = "%status %percentage"
    last_full_capacity = true
    format_down = "Û±âù "
    status_chr = "Ó∫° " # "‚ö°" —Å—Ç–∞—Ç—É—Å –ø–æ–¥–∑–∞—Ä—è–¥–∫–∏
    status_bat = "Û±ä£ " # "üîã" —Å—Ç–∞—Ç—É—Å –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–±–æ—Ç—ã –æ—Ç –±–∞—Ç–∞—Ä–µ–∏
