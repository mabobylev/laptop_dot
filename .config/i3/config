# start dmenu (a program launcher)
#bindsym $mod+d exec --no-startup-id dmenu_run
# bindsym $alt+d exec --no-startup-id dmenu_run -i -nb '#1f222d' -nf '#81a1c1' -sb '#81a1c1' -sf '#1f222d' -fn 'Ubuntu Nerd Font:bold:pixelsize=18'
bindcode $alt+40 exec --no-startup-id dmenu_run -i -l 10 -fn 'Ubuntu Nerd Font:bold:pixelsize=18'
# A more modern dmenu replacement is rofi:
# bindsym $mod+d exec --no-startup-id rofi -show drun
bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
bindcode $mod+Shift+40 exec --no-startup-id i3-dmenu-desktop
# bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Tab exec "rofi -show window"

