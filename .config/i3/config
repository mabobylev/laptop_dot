bar {
        # height 25
        position top
        # padding 2px
        strip_workspace_numbers yes
        separator_symbol "  "
        # i3bar_command i3bar --transparency
        # status_command i3blocks
        status_command i3status
        # tray_padding 1
        colors {
            separator  #81A1C1
            statusline #81A1C1
            background #1f222d

            #                   border   backgr.  text
            focused_workspace   #2E3440  #2E3440  #81A1C1
            active_workspace    #2E3440  #2E3440  #D8DEE9
            inactive_workspace  #1f222d  #1f222d  #4C566A
            urgent_workspace    #1f222d  #1f222d  #EE829f
            binding_mode        #5E81AC  #5E81AC  #2E3440
        }
}

