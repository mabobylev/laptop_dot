bindsym --release $mod+Print exec --no-startup-id import -window root $HOME/Pictures/shot_$(date +%F-%H-%M).png
# Screenshot the active window and save it to the clipboard for quick pasting
# Requires maim and xclip
bindsym Print exec maim -s --format png /dev/stdout | xclip -selection clipboard -t image/png -i
bindsym $mod+Print exec maim --select | tee ~/Pictures/$(date +%s).png | xclip -sel c -t image/png
bindsym $mod+Shift+Print exec --no-startup-id maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

