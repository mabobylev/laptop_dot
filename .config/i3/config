# case-insensitive and uses negative lookaheads, supported by PCRE
# bindsym $mod+x [class="^(?i)(?!waterfox*)(?!gnome-terminal).*"] kill
bindsym $alt+Shift+Return exec --no-startup-id thunar

#####################################################################################################################
#################                          Menu to lock, exit, reboot, ...                          #################
#####################################################################################################################
# Mode exit menu
# Press $mod+Shift+e followed by either e, r, s Escape or Return to exit i3,
# reboot system, shutdown system or return to the default mode, respectively.
set $mode_exit Launch: [l]ock [e]xit [r]reboot [s]hutdown
mode "$mode_exit" {
    bindsym l exec i3lock -i /usr/share/backgrounds/nordic-wallpapers-git/windows-panic.png, mode "default"
    bindsym e exec i3-msg exit
    bindsym r exec systemctl reboot
    bindsym s exec systemctl poweroff
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindcode $alt+Shift+26 mode "$mode_exit"
bindcode $mod+Shift+26 exec --no-startup-id rofi -show power-menu -modi power-menu:"rofi-power-menu --choices=logout/shutdown/reboot"
